---
import "../styles/global.css";
import { UserMenu } from "../components/auth/UserMenu";

interface Props {
  title?: string;
}

const { title = "Recipes Saver" } = Astro.props;

// Get user state from locals (set by middleware)
const user = Astro.locals.user;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/chiefStack.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-muted/60">
    {
      user && (
        <header class="border-b bg-white">
          <div class="mx-auto flex w-full max-w-5xl items-center justify-between px-6 py-4">
            <h1 class="text-xl font-semibold text-gray-900">
              <a href="/" class="hover:text-gray-700 transition-colors">
                ChiefStack
              </a>
            </h1>

            <UserMenu client:load user={user} />
          </div>
        </header>
      )
    }
    <main class="mx-auto flex w-full max-w-5xl flex-col gap-8">
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
