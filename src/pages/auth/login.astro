---
import Layout from "@/layouts/Layout.astro";
import { LoginForm } from "@/components/auth/LoginForm";

// Get query parameters
const redirectTo = Astro.url.searchParams.get("redirectTo") || "/";
const error = Astro.url.searchParams.get("error") || undefined;

// Check if user is already authenticated
if (Astro.locals.session) {
  return Astro.redirect(redirectTo);
}
---

<Layout title="Login - 10x Recipes">
  <main class="min-h-screen flex items-center justify-center p-4">
    <LoginForm client:load redirectTo={redirectTo} initialError={error} />
  </main>
</Layout>
