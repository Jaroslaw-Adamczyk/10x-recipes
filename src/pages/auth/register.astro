---
import Layout from "@/layouts/Layout.astro";
import { RegisterForm } from "@/components/auth/RegisterForm";

// Get query parameters
const redirectTo = Astro.url.searchParams.get("redirectTo") || "/";

// Note: Session check will be implemented when backend is ready
// For now, this is just the UI implementation
---

<Layout title="Register - 10x Recipes">
  <main class="min-h-screen flex items-center justify-center p-4 bg-muted/30">
    <RegisterForm client:load redirectTo={redirectTo} />
  </main>
</Layout>
